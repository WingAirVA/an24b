<?xml version="1.0"?>

<!-- Landing lights PRF-4/88, Taxi or T/O-Landing mode -->

<PropertyList>
 <path>../../../shared/switches/2ppng-15k.ac</path>
 <animation>
  <type>pick</type>
  <object-name>clickspot_up</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
        interpolate("/controls/lighting/ext_land-light-mode", 1.0, 0.1 );
      </script>
    </binding>
  </action>
   <hovered>
    <binding>
      <command>set-tooltip</command>
      <tooltip-id>PRF_landing</tooltip-id>
      <label>PRF-4 T/O-Landing Mode</label>
    </binding>
   </hovered>
</animation>

 <animation>
  <object-name>clickspot_middle</object-name>
  <type>pick</type>
  <visible>false</visible>
</animation>

 <animation>
  <type>pick</type>
  <object-name>clickspot_down</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
        interpolate("/controls/lighting/ext_land-light-mode", 0.0, 0.1 );
      </script>
    </binding>
  </action>
   <hovered>
    <binding>
      <command>set-tooltip</command>
      <tooltip-id>PRF_taxi</tooltip-id>
      <label>PRF-4 Taxi Mode</label>
    </binding>
   </hovered>
</animation>

 <animation>
   <type>rotate</type>
   <object-name>lever</object-name>
   <property>controls/lighting/ext_land-light-mode</property>
  <interpolation>
    <entry><ind>0.0</ind>	<dep>-20.0</dep></entry>
    <entry><ind>1.0</ind>	<dep>20.0</dep></entry>
  </interpolation>
  <axis>
    <x>0.0</x>
    <y>-1.0</y>
    <z>0.0</z>
  </axis>
 </animation>
 
</PropertyList>
